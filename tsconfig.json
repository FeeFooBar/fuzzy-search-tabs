{
    "compilerOptions": {
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/build",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "lib": [
        "es6",
        "dom",
      ],
      "alwaysStrict": true,
      "esModuleInterop": true,
      "watch": true
    },
    "include": [
      "./src/**/*"
    ]
}